#!/usr/bin/env node

const program = require('commander');
const chalk = require('chalk');

console.log(chalk.blue('Richmedia Temple Server'));
console.log();

program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('dev', 'Start development')
  .command('build', 'Build Units')
  .command('init', 'Create a local settings file (.richmediarc)')
  .parse(process.argv);
