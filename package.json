{
  "name": "@mediamonks/richmedia-temple-server",
  "version": "0.0.2",
  "description": "This is the Richmedia Temple, used for creating richmedia units for various vendors.",
  "bin": {
    "rts": "src/bin/server",
    "rts-dev": "src/bin/server-dev",
    "rts-build": "src/bin/server-build"
  },
  "scripts": {
    "build": "node ./setup-for-npm.js",
    "test": "cross-env NODE_ENV=test nyc --all mocha \"./test/**/*.spec.{ts,js}\"",
    "test:dev": "mocha -w --watch-extensions ts,js \"./test/**/*.spec.{ts,js}\"",
    "doc": "node_modules/.bin/esdoc",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src --ext .js --cache",
    "prettify": "prettier --write \"src/**/*.{js,json}\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.js": [
        "npm run lint:js"
      ]
    }
  },
  "pre-push": [
    "validate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediamonks/temple.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Mient-jan Stelling",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mediamonks/temple/issues"
  },
  "homepage": "https://github.com/mediamonks/temple#readme",
  "devDependencies": {
    "@babel/cli": "7.0.0-rc.1",
    "@babel/core": "7.0.0-rc.1",
    "@babel/plugin-transform-runtime": "7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/register": "7.0.0-rc.1",
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.1.2",
    "@types/sinon-chai": "^2.7.29",
    "babel-eslint": "^8.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-next": "^1.1.4",
    "chai": "^4.1.2",
    "coveralls": "^2.11.6",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^6.0.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.3",
    "nyc": "^11.3.0",
    "prettier": "^1.13.7",
    "shx": "^0.2.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "@mediamonks/temple": "^0.1.3"
  }
}
